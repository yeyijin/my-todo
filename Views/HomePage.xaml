<UserControl x:Class="ToDoList.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoList.Views"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="800" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!---左右的弹窗基本host-->
        <materialDesign:DrawerHost IsRightDrawerOpen="{Binding IsRightShow}" Name="Right_Add">
            <!---右边弹窗-->
            <materialDesign:DrawerHost.RightDrawerContent>

                <StackPanel Width="200"
      Margin="16,16,16,16">

                    <TextBox   Margin="16,5,16,5"  Text="{Binding TodoInfo.Title}"
  VerticalAlignment="Center"  Name="EventName"
  materialDesign:HintAssist.Hint="事件名称"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                    </TextBox>

                    <TextBox  Margin="16,5,16,5"   Text="{Binding TodoInfo.Description}"
  VerticalAlignment="Center"  Name="EventDescription"
  materialDesign:HintAssist.Hint="事件描述"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <materialDesign:TimePicker   Is24Hours="True"  Text="{Binding TodoInfo.StartHour}"
  Width="168"  Name="EventStartTime"
  materialDesign:HintAssist.Hint="开始时间"  Margin="16,5,16,5"
  Style="{StaticResource MaterialDesignFloatingHintTimePicker}" />

                    <materialDesign:TimePicker   Is24Hours="True"    Text="{Binding TodoInfo.EndHour}"
  Width="168" Name="EventEndTime"
  materialDesign:HintAssist.Hint="结束时间" Margin="16,5,16,5"
  Style="{StaticResource MaterialDesignFloatingHintTimePicker}" />

                    <Button Margin="16"  Command="{Binding AddOrEditSubmitCommond}">确定</Button>
                </StackPanel>
            </materialDesign:DrawerHost.RightDrawerContent>
            <materialDesign:DialogHost CloseOnClickAway="true"  IsOpen="{Binding IsDialogOpen}">

                <!---动画dialog-->
                <materialDesign:DialogHost.DialogContent>
                    <Grid Margin="16">
                        <Button
          HorizontalAlignment="Center"
          Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
          CommandParameter="Sample2Cancel"
          Content="无效的参数"
          IsCancel="True"
          Style="{StaticResource MaterialDesignFlatButton}" />
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!---最上面几个模块-->
                    <StackPanel>
                        <DockPanel Grid.Row="0" Margin="10" LastChildFill="False">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock  FontSize="20" VerticalAlignment="Center" Foreground="White" FontFamily="Jokerman">当前任务:</TextBlock>
                                <TextBlock Text="{Binding CurrentTodo.Title}" FontWeight="Black" Foreground="DarkCyan" FontStyle="Normal" FontSize="30"></TextBlock>
                            </StackPanel>
                            <Button DockPanel.Dock="Right"
  Width="80"
  Content="新增"
  Style="{StaticResource MaterialDesignOutlinedLightButton}"
                            Command="{Binding AddClickCommond}"
  ToolTip="MaterialDesignOutlinedButton" />
                        </DockPanel>

                        <!---上面统计的信息-->
                        <ItemsControl ItemsSource="{Binding StatisticsInfos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding StatisticsInfoCount}" ></UniformGrid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border   Margin="20" CornerRadius="35">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFC042F2"/>
                                                <GradientStop Color="#FF35A0F2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FF558FE6" BlurRadius="1" Opacity="0.5"></DropShadowEffect>
                                        </Border.Effect>
                                        <StackPanel>
                                            <materialDesign:PackIcon Kind="{Binding Icon}" Margin="10" FontSize="20" Foreground="#FFEDE7E7" />
                                            <TextBlock Text="{Binding Title}" Margin="10" FontSize="20" Foreground="White" FontFamily="Snap ITC" FontWeight="Bold"></TextBlock>
                                            <TextBlock Text="{Binding Val}" Margin="10" FontSize="30" Foreground="White"  FontFamily="Snap ITC" FontWeight="Bold"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>
                    </StackPanel>

                    <!---中间计时器-->
                    <StackPanel Grid.Row="1">
                        <Border VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.2,1" StartPoint="0.2,0" ColorInterpolationMode="SRgbLinearInterpolation">
                                    <GradientStop Color="#FF3160C8" />
                                    <GradientStop Color="#FFC93BDD" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>

                                <TextBlock FontSize="100" Text="{Binding ClockTime}" Foreground="Beige">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Gray" BlurRadius="3"></DropShadowEffect>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Margin="10" Background="#EEC591" Command="{Binding TomatoExcuteCommand}"
  Style="{StaticResource MaterialDesignFloatingActionLightButton}"
  ToolTip="MaterialDesignFloatingActionLightButton">
                                        <materialDesign:PackIcon Height="35" Width="35" HorizontalAlignment="Center"
    Kind="{Binding TomatoRunIcon}" />
                                    </Button>
                                    <Button Margin="10" Background="#EEC591"   Command="{Binding TomatoResetCommand}"
  Style="{StaticResource MaterialDesignFloatingActionLightButton}"
  ToolTip="MaterialDesignFloatingActionLightButton">
                                        <materialDesign:PackIcon  Foreground="#FFFAF0"
    Kind="Restart" Height="30" Width="30" HorizontalAlignment="Center" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <Grid Grid.Row="2" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!---列表-->
                        <Grid Margin="10,0,10,0" >
                            <Border CornerRadius="15">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF5955E2"/>
                                        <GradientStop Color="#FF6C22AC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ListBox x:Name="OnGoingToDo"
                           ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             HorizontalContentAlignment="Stretch"
                        ItemsSource="{Binding OnGoingToDoList}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="15">
                                                <DockPanel LastChildFill="False">
                                                    <StackPanel Orientation="Horizontal"  DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StartHour}" Margin="0,0,50,0" FontSize="20" Foreground="White" Opacity="0.5"></TextBlock>
                                                        <TextBlock Text="-" Margin="-40,0,50,0" FontSize="15" Foreground="White" Opacity="0.5"></TextBlock>
                                                        <TextBlock Text="{Binding EndHour}" Margin="-40,0,50,0" FontSize="20" Foreground="White" Opacity="0.5"></TextBlock>
                                                        <ToggleButton  IsChecked="{Binding IsComplete}" Command="{Binding Path=DataContext.TodoStatusChangeCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}">
                                                        </ToggleButton>
                                                        <materialDesign:PopupBox Margin="0,-40,0,0"  Panel.ZIndex="1">
                                                            <Border CornerRadius="15">
                                                                <StackPanel>
                                                                    <Button Content="设置为当前任务"  Command="{Binding Path=DataContext.SetCurrentTodoCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}"></Button>
                                                                    <Button Content="编辑"  Command="{Binding Path=DataContext.TodoUpdateCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}"></Button>
                                                                    <Button Content="删除"  Command="{Binding Path=DataContext.TodoDeleteCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}"></Button>
                                                                </StackPanel>
                                                            </Border>
                                                        </materialDesign:PopupBox>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Text="{Binding Title}" Margin="1" FontSize="20" Foreground="White" ></TextBlock>
                                                        <TextBlock Text="{Binding Description}"  Margin="10" FontSize="10" Foreground="White" Opacity="0.5"  ></TextBlock>
                                                    </StackPanel>
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Grid>
                        <Grid  Grid.Column="1" Margin="10,0,10,0">
                            <Border CornerRadius="15">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF5955E2"/>
                                        <GradientStop Color="#FF6C22AC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ListBox x:Name="CompleteToDo"
                           ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             HorizontalContentAlignment="Stretch"
                        ItemsSource="{Binding SuccessToDoList}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel LastChildFill="False">
                                                <StackPanel Orientation="Horizontal"  DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding StartHour}" Margin="0,0,50,0" FontSize="20" Foreground="White" Opacity="0.5" ></TextBlock>
                                                    <TextBlock Text="-" Margin="-40,0,50,0" FontSize="20" Foreground="White" Opacity="0.5" ></TextBlock>
                                                    <TextBlock Text="{Binding EndHour}" Margin="-40,0,50,0" FontSize="20" Foreground="White" Opacity="0.5" ></TextBlock>
                                                    <ToggleButton IsChecked="{Binding IsComplete}"   Command="{Binding Path=DataContext.TodoStatusChangeCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}">
                                                    </ToggleButton>
                                                    <materialDesign:PopupBox Margin="0,-40,0,0"  Panel.ZIndex="1">
                                                        <StackPanel>
                                                            <Button Content="删除"  Command="{Binding Path=DataContext.TodoDeleteCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}"></Button>
                                                            <Button Content="编辑"  Command="{Binding Path=DataContext.TodoUpdateCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
   CommandParameter="{Binding RelativeSource={x:Static RelativeSource.Self},Path=DataContext}"></Button>
                                                        </StackPanel>
                                                    </materialDesign:PopupBox>
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Title}" Margin="1" FontSize="20" Foreground="White" ></TextBlock>
                                                    <TextBlock Text="{Binding Description}"  Margin="10"  Opacity="0.5"  FontSize="10" Foreground="White"  ></TextBlock>
                                                </StackPanel>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Grid>

                    </Grid>
                </Grid>
            </materialDesign:DialogHost>
        </materialDesign:DrawerHost>
    </ScrollViewer>
</UserControl>